# EmmaTresor Production Environment (sample values)

## General backend settings
ALLOW_USER_REGISTRATION=false
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=emma.example.com,nginx,backend

# CRITICAL: Generate strong secret key with: python generate_secret_key.py
# Minimum 50 characters required for production!
DJANGO_SECRET_KEY=replace_with_a_64_character_random_secret

# SECRET KEY ROTATION SUPPORT
# During rotation, move current key to OLD_1, set new key above
# After grace period (30 days), remove old keys
# Documentation: docs/SECRET_KEY_ROTATION_GUIDE.md
# DJANGO_SECRET_KEY_OLD_1=
# DJANGO_SECRET_KEY_OLD_2=
# DJANGO_SECRET_KEY_OLD_3=

DJANGO_FORCE_SSL=1

## Database configuration
DB_VENDOR=postgres
POSTGRES_DB=emmatresor
POSTGRES_USER=emmatresor
POSTGRES_PASSWORD=replace_with_strong_db_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

## Automatic superuser creation (disable for production deployments)
AUTO_CREATE_SUPERUSER=false
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=

## Security settings
CSRF_TRUSTED_ORIGINS=https://emma.example.com
CORS_ALLOWED_ORIGINS=https://emma.example.com

## Cookie-based JWT configuration
JWT_ACCESS_COOKIE_NAME=emmatresor_access
JWT_REFRESH_COOKIE_NAME=emmatresor_refresh
JWT_REMEMBER_COOKIE_NAME=emmatresor_remember
JWT_COOKIE_SECURE=1
JWT_COOKIE_HTTPONLY=1
JWT_COOKIE_SAMESITE=None
JWT_COOKIE_DOMAIN=emma.example.com
JWT_REFRESH_COOKIE_PATH=/api/

## Frontend configuration
VITE_API_BASE_URL=/api
EMMATRESOR_FRONTEND_LOGIN_URL=https://emma.example.com/login
EMMATRESOR_FRONTEND_BASE_URL=https://emma.example.com
