{
  "name": "frontend",                                    // Application name for npm package management
  "private": true,                                       // Prevents accidental publishing to npm registry
  "version": "0.0.0",                                    // Initial version number
  "type": "module",                                      // Enables ES modules support for modern JavaScript

  "scripts": {
    "dev": "vite",                                      // Start development server with hot reload functionality
    "build": "vite build",                               // Build optimized production bundle
    "preview": "vite preview --host",                    // Preview production build locally with network access
    "typecheck": "tsc --noEmit"                          // Run TypeScript compiler for type checking without output files
  },

  "dependencies": {
    // Form Handling & Validation Libraries
    "@hookform/resolvers": "^5.2.2",                     // Validation resolver adapters for react-hook-form
    "react-hook-form": "^7.66.0",                        // High-performance form library with minimal re-renders
    "zod": "^4.1.12",                                    // TypeScript-first schema declaration and validation library

    // QR Code Scanning & Generation Libraries
    "@yudiel/react-qr-scanner": "^2.4.1",                // React component for QR code scanning from camera
    "@zxing/browser": "^0.1.5",                          // Browser-based barcode/QR code scanning library
    "qrcode": "^1.5.4",                                  // QR code generation library for creating QR codes

    // React Core Framework & Routing
    "react": "^19.1.1",                                  // React library for building user interfaces
    "react-dom": "^19.2.0",                              // React DOM renderer for web browsers
    "react-router-dom": "^7.9.5",                        // Declarative routing library for React applications

    // UI Components & CSS Utilities
    "react-select": "^5.10.2",                           // Advanced select/dropdown component with multi-select support
    "@types/react-select": "^5.0.1",                     // TypeScript type definitions for react-select
    "clsx": "^2.1.1",                                    // Utility for constructing conditional className strings

    // HTTP Client & Data Management
    "axios": "^1.13.2",                                  // Promise-based HTTP client for API requests
    "jwt-decode": "^4.0.0",                              // JWT token decoding library for authentication
    "zustand": "^5.0.8"                                  // Minimalist state management library for React
  },
  "devDependencies": {
    // Build Tools & Development Environment
    "vite": "^7.2.2",                                     // Fast build tool and development server
    "@vitejs/plugin-react": "^5.1.0",                     // Vite plugin for React development with Fast Refresh
    "typescript": "~5.9.3",                               // TypeScript compiler for type-safe development

    // CSS Processing & Framework
    "tailwindcss": "^4.1.15",                             // Utility-first CSS framework for rapid UI development
    "@tailwindcss/postcss": "^4.1.17",                    // PostCSS plugin for integrating Tailwind CSS
    "postcss": "^8.4.47",                                 // CSS transformation tool for processing modern CSS
    "autoprefixer": "^10.4.20",                           // PostCSS plugin for adding vendor prefixes

    // TypeScript Type Definitions for External Libraries
    "@types/node": "^24.10.0",                            // Node.js type definitions for server-side JavaScript types
    "@types/react": "^19.1.3",                            // React type definitions for TypeScript support
    "@types/react-dom": "^19.2.2",                        // React DOM type definitions for browser-specific APIs
    "@types/qrcode": "^1.5.6",                            // QR code library type definitions

    // Production Build Optimization
    "terser": "^5.44.1"                                   // JavaScript minifier and mangler for production builds
  },

  "overrides": {
    // Dependency version overrides to resolve compatibility issues
    "@yudiel/react-qr-scanner": {
      "react": "^19.1.1",                                // Force React 19 version for QR scanner compatibility
      "react-dom": "^19.1.1"                             // Force React DOM 19 version for QR scanner compatibility
    }
  }
}
